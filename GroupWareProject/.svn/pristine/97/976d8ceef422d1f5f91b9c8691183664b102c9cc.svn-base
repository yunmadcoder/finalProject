<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.groupware.mapper.schedule.IScheduleMapper">
	
	<select id="selectScheduleListByEmplNo" parameterType="int" resultType="scheduleVO">
		select
		    a.schdul_no, a.schdul_group_no, a.schdul_nm, a.schdul_bgnde, a.schdul_endde, a.schdul_cn, a.schdul_font_color, a.schdul_bgrn_color, a.schdul_place, a.allday_yn
		from
		    schedule a, schdul_participant b, sch_group c
		where
		    b.empl_no = #{emplNo} and
		    a.schdul_no = b.schdul_no and
		    a.schdul_group_no = c.schdul_group_no and
		    c.schdul_type_code = 'C103'
	</select>
	
	<select id="selectScheduleListByDeptCode" parameterType="String" resultType="scheduleVO">
		select
    		a.schdul_no, a.schdul_group_no, a.schdul_nm, a.schdul_bgnde, a.schdul_endde, a.schdul_cn, a.schdul_font_color, a.schdul_bgrn_color, a.schdul_place, a.allday_yn
		from
		    schedule a, sch_group b
		where
		    a.schdul_group_no = b.schdul_group_no and
		    b.psitn_code = #{deptCode}
	</select>
	
	<select id="selectCompanyScheduleList" resultType="scheduleVO">
		select
		    a.schdul_no, a.schdul_group_no, a.schdul_nm, a.schdul_bgnde, a.schdul_endde, a.schdul_cn, a.schdul_font_color, a.schdul_bgrn_color, a.schdul_place, a.allday_yn
		from
		    schedule a, sch_group b
		where
		    a.schdul_group_no = b.schdul_group_no and
		    b.schdul_type_code = 'C101'
	</select>
	
	<select id="selectScheduleBySchdulNo" parameterType="String" resultType="scheduleVO">
		select
		    schdul_no, schdul_group_no, schdul_nm, schdul_bgnde, schdul_endde, schdul_cn, schdul_font_color, schdul_bgrn_color, schdul_place, allday_yn
		from
		    schedule
		where
			schdul_no = #{schdulNo}
	</select>
	
	<select id="selectScheduleListByEmplNoNDate" parameterType="Map" resultType="scheduleVO">
		SELECT
		    a.schdul_no,
		    schdul_group_no,
		    schdul_nm,
		    schdul_bgnde,
		    schdul_endde,
		    schdul_cn,
		    schdul_font_color,
		    schdul_bgrn_color,
		    schdul_place,
		    register,
		    allday_yn
		FROM
		    schedule a, schdul_participant b
		where 
		    a.schdul_no = b.schdul_no
		    and b.empl_no = #{emplNo}
		    <![CDATA[ 
			    and a.schdul_bgnde <= #{bgnde}
			    and a.schdul_endde >= #{endde}
		     ]]>
	
	</select>
	<select id="selectSchdulGroupNo" parameterType="Map" resultType="Integer">
		select schdul_group_no
		from sch_group
		where 
		    schdul_type_code = #{schdulTypeCode}
		    and psitn_code = #{psitnCode}
	</select>
	
	<insert id="insertSchdulGroup" parameterType="Map">
		INSERT INTO sch_group (
		    schdul_group_no,
		    schdul_type_code,
		    psitn_code
		) VALUES (
		    SEQ_SCHDUL_GROUP.nextval,
		    #{schdulTypeCode},
		    #{psitnCode}
		)
	</insert>
	
	<insert id="insertSchdul" parameterType="Map">
		<selectKey keyProperty="schdulNo" resultType="int" order="BEFORE">
			select SEQ_SCHDUL.nextval from dual
		</selectKey>
		INSERT INTO schedule (
		    schdul_no,
		    schdul_nm,
		    schdul_bgnde,
		    schdul_endde,
		    schdul_cn,
		    schdul_bgrn_color,
		    schdul_place,
		    register
		) VALUES (
		    #{schdulNo},
		    #{schdulNm},
		    TO_DATE(#{schdulBgnde},'YYYY-MM-DD HH24:MI'),
		    TO_DATE(#{schdulEndde},'YYYY-MM-DD HH24:MI'),
		    #{schdulCn},
		    #{schdulBgrnColor},
		    #{schdulPlace},
		    #{register}
		)
	</insert>
	
	<insert id="insertSchGroupInclude" parameterType="Map">
		INSERT INTO sch_group_include (
		    schdul_group_no,
		    schdul_no
		) VALUES (
		    #{schdulGroupNo},
		    #{schdulNo}
		)
	</insert>
	
	<insert id="insertSchdulParticipant" parameterType="Map">
		INSERT INTO schdul_participant (
		    schdul_no,
		    empl_no
		) VALUES (
		    #{schdulNo},
		    #{emplNo}
		)
	</insert>
	
	<select id="selectLowerDept" parameterType="String" resultType="String">
		SELECT
		    cmmn_code
		FROM
		    comm_code
		where 
		    cmmn_code_option1 = #{deptCode}
		    or cmmn_code = #{deptCode}
	</select>
	
	<select id="selectScheduleList" parameterType="Map" resultType="scheduleVO">
		SELECT
		    a.schdul_no,
		    a.schdul_nm,
		    a.schdul_bgnde,
		    a.schdul_endde,
		    a.schdul_cn,
		    a.schdul_font_color,
		    a.schdul_bgrn_color,
		    a.schdul_place,
		    a.allday_yn,
		    b.schdul_type_code,
		    b.psitn_code
		FROM
		    schedule a, sch_group b, sch_group_include c
		where 
		    a.schdul_no = c.schdul_no
		    and b.schdul_group_no = c.schdul_group_no
		    and b.schdul_type_code = #{schdulTypeCode}
		    <if test="psitnCode != null and !psitnCode.equals('')">
			    and b.psitn_code = #{psitnCode}
		    </if>
	</select>
	
	
</mapper>