@charset "UTF-8";

.prjct-content{
  display: flex;
  max-height: 900px;
}

.prjct-tab .nav-item {
  width: 100px;
}
.prjct-tab .nav-item .nav-link {
  display: flex;
  justify-content: center;
}

#task-status-chart {
  margin-top: 20px;
  margin-bottom: 20px;
}

.chart {
  width: 100%;
  aspect-ratio: 1;
}

.report-detail-info{
  margin-left: 50px;
  margin-top: 20px;
}


.side-stick {
  width: 3px;
  height: 20px;
  /* position: absolute; */
  margin-right: 10px;
}

.btn-prjct{
  display: flex;
  align-items: center;
}

.btn-prjct .nav-link{
  padding: 5px;
  /* margin-left: 5px; */
}


.task-detail-title {
  margin: 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
}

.task-detail-title h5 {
  margin: 0;
}

.task-detail-title .side-stick {
  position: relative;
  width: 3px;
  height: 20px;
  margin-left: 20px;
  margin-right: 10px;
}

.modal-task-detail {
  width: 30vw;
  max-width: none;
  height: calc(100vh - 160px);
  margin-top: 100px;
  margin-right: 50px;
}

.modal-task-detail .modal-content {
  height: 100%;
  padding-right: 10px;
}

.task-detail-info-elem {
  padding: 10px;
  display: flex;
  gap: 10px;
  align-items: center;
}

.task-detail-info-elem > i,img {
  width: 30px;
  display: flex;
  justify-content: center;
}