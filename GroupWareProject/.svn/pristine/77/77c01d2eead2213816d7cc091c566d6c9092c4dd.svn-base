	<select id="myDocumentsCount" parameterType="int" resultType="map">
		select COUNT(*) as cnt, 'all' as type
		from approval a
		LEFT OUTER JOIN sanctioner s on a.aprovl_no = s.aprovl_no
		where s.approver_no = #{emplNo}
		and s.sanctner_sttus_code IN ('G301', 'G305')
		
		union all
		
		select COUNT(*) as cnt, 'viewer' as type
		from approval a
		JOIN approval_rfrnc ar on a.aprovl_no = ar.aprovl_no
		where ar.rfrncer_no= #{emplNo}
		and ar.aprovl_rfrnc_confirm_dt is null
		
		union all
		
		select COUNT(*) as cnt, 'approve' as type
		from approval a
		LEFT OUTER JOIN sanctioner s on a.aprovl_no = s.aprovl_no
		where s.approver_no = #{emplNo}
		and s.sanctner_sttus_code = 'G302'
	</select>
	
	<select id="selectApproveList" parameterType="approvalVO" resultType="approvalVO">
		SELECT
	    a.aprovl_no
	  , a.doc_no
	  , d.doc_nm
	  , empl_no
	  , aprovl_nm
	  , aprovl_type_code
	  , c.cmmn_code_name1  AS aprovl_type_nm
	  , cc.cmmn_code_name1 aprovl_sttus_nm
	  , aprovl_sttus_code
	  , emrgncy_yn
	  , submit_dt
	  , clos_dt
	  , a.atch_file_group_no
	  , (
	        SELECT
	            COUNT(*)
	        FROM
	            attach_file b
	        WHERE
	            a.atch_file_group_no = b.atch_file_group_no
	    ) file_count
	FROM
	    approval   a
	    LEFT OUTER JOIN sanctioner s ON a.aprovl_no = s.aprovl_no
	    LEFT OUTER JOIN documents  d ON d.doc_no = a.doc_no
	    LEFT JOIN comm_code  c ON aprovl_type_code = c.cmmn_code
	    LEFT JOIN comm_code  cc ON aprovl_sttus_code = cc.cmmn_code
	WHERE
	    approver_no = #{emplNo}
		AND s.sanctner_dt is not null
   	<if test="subType != null">
		<if test="subType == 'inprogress'">
			AND aprovl_sttus_code = 'G102'
		</if>
		<if test="subType == 'complete'">
			AND aprovl_sttus_code = 'G103'
		</if>	
		<if test="subType == 'return'">
			AND aprovl_sttus_code = 'G104'
		</if>
	</if>
	GROUP BY
	    a.aprovl_no
	  , a.doc_no
	  , d.doc_nm
	  , empl_no
	  , aprovl_nm
	  , aprovl_type_code
	  , c.cmmn_code_name1
	  , cc.cmmn_code_name1
	  , aprovl_sttus_code
	  , emrgncy_yn
	  , submit_dt
	  , clos_dt
	  , a.atch_file_group_no
	ORDER BY
	    emrgncy_yn DESC, submit_dt DESC
	</select>

